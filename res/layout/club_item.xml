<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    app:cardCornerRadius="0dp"
    android:id="@+id/cv_club">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rl_club">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/club_bg"
                android:src="@drawable/barys_bg"
                android:layout_gravity="right"
                android:layout_alignParentRight="true"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp">
                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="75dp"
                    android:src="@drawable/barys"
                    android:id="@+id/club_logo"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Барыс"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="#1d3144"
                    android:id="@+id/club_name"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="город Астана"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#72767a"
                    android:id="@+id/club_city"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фарм-клуб"
                    android:textStyle="bold"
                    android:textSize="16dp"
                    android:textColor="#3a6f7c"
                    android:id="@+id/club_farm"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</android.support.v7.widget.CardView>
